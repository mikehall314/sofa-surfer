{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"allowJs": false,
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node", "jest"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/**/*.spec.ts"]
}
